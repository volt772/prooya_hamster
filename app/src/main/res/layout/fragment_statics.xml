<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.apx5.apx5.ui.statics.StaticsViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_white_10"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:scrollingCache="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/md_10"
                    android:paddingRight="@dimen/md_10">

                    <!-- 시즌승률-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/md_0"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/md_2"
                        android:layout_marginLeft="@dimen/md_2"
                        android:layout_marginRight="@dimen/md_2"
                        android:layout_marginTop="@dimen/md_2"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/md_2"
                        app:cardElevation="@dimen/md_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/md_15">

                            <RelativeLayout
                                android:layout_width="@dimen/md_40"
                                android:layout_height="@dimen/md_40">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/orange_400"
                                    app:srcCompat="@drawable/shape_circle" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.seasonRate}"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/p_white_10" />
                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/md_10"
                                android:layout_height="@dimen/md_0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/winning_rate_season"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.seasonPlays}"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_500" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/md_10"
                        android:layout_height="@dimen/md_0" />

                    <!-- 통산승률-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/md_0"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/md_2"
                        android:layout_marginLeft="@dimen/md_2"
                        android:layout_marginRight="@dimen/md_2"
                        android:layout_marginTop="@dimen/md_2"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/md_2"
                        app:cardElevation="@dimen/md_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/md_15">

                            <RelativeLayout
                                android:layout_width="@dimen/md_40"
                                android:layout_height="@dimen/md_40">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/indigo_400"
                                    app:srcCompat="@drawable/shape_circle" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.allRate}"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/p_white_10" />
                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/md_10"
                                android:layout_height="@dimen/md_0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/md_0"
                                    android:layout_weight="1"
                                    android:text="@string/winning_rate_total"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.allPlays}"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_500" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/md_10"
                    android:paddingRight="@dimen/md_10">

                    <!-- 최근직관-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/md_0"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/md_2"
                        android:layout_marginLeft="@dimen/md_2"
                        android:layout_marginRight="@dimen/md_2"
                        android:layout_marginTop="@dimen/md_2"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/md_2"
                        app:cardElevation="@dimen/md_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/md_15">

                            <RelativeLayout
                                android:layout_width="@dimen/md_40"
                                android:layout_height="@dimen/md_40">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/red_300"
                                    app:srcCompat="@drawable/shape_circle" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.recentPlayTeam}"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/p_white_10" />
                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/md_10"
                                android:layout_height="@dimen/md_0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/md_0"
                                    android:layout_weight="1"
                                    android:text="@string/recent_watching"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.recentPlay}"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_500" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/md_10"
                        android:layout_height="@dimen/md_0" />

                    <!-- 직관횟수-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/md_0"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/md_2"
                        android:layout_marginLeft="@dimen/md_2"
                        android:layout_marginRight="@dimen/md_2"
                        android:layout_marginTop="@dimen/md_2"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/md_2"
                        app:cardElevation="@dimen/md_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/md_15">

                            <RelativeLayout
                                android:layout_width="@dimen/md_40"
                                android:layout_height="@dimen/md_40">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/light_green_500"
                                    app:srcCompat="@drawable/shape_circle" />

                                <ImageView
                                    android:layout_width="@dimen/md_20"
                                    android:layout_height="@dimen/md_20"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/p_white_10"
                                    app:srcCompat="@drawable/ic_description" />

                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/md_10"
                                android:layout_height="@dimen/md_0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/md_0"
                                    android:layout_weight="1"
                                    android:text="@string/watching_count"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.allCount}"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_500" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/md_10"
                    android:paddingRight="@dimen/md_10">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/md_2"
                        android:layout_marginTop="@dimen/md_2"
                        android:layout_marginRight="@dimen/md_2"
                        android:layout_marginBottom="@dimen/md_2"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/md_2"
                        app:cardElevation="@dimen/md_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- 최근 10경기-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/md_15"
                                    android:layout_height="@dimen/md_0" />

                                <TextView
                                    android:layout_width="@dimen/md_0"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/recent_5plays"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/md_1"
                                android:background="@color/grey_300" />

                            <!-- 최근5경기 리스트-->
                            <RelativeLayout
                                android:id="@+id/ryt_play_list"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/md_278"
                                tools:showIn="@layout/fragment_statics">

                                <ListView
                                    android:id="@+id/lv_play_lists"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:listSelector="@android:color/transparent" />
                            </RelativeLayout>

                            <!-- Empty-->
                            <RelativeLayout
                                android:id="@+id/ryt_empty_list"
                                android:layout_width="match_parent"
                                android:background="@color/p_white_10"
                                android:layout_marginTop="@dimen/md_60"
                                android:visibility="gone"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="@dimen/md_300"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/md_80"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/iv_empty"
                                        android:layout_width="@dimen/md_170"
                                        android:layout_height="@dimen/md_170"
                                        android:src="@drawable/ic_info_type_b" />

                                    <TextView
                                        android:id="@+id/iv_empty_info"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/md_15"
                                        android:text="@string/no_plays"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:textColor="@color/grey_700" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>